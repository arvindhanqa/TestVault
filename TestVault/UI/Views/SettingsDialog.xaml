<Window x:Class="TestVault.UI.Views.SettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings - TestVault" Height="500" Width="500"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Settings" FontSize="20" FontWeight="Bold" Margin="0,0,0,15" />

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- SharePoint Configuration -->
                <GroupBox Header="SharePoint Configuration" Margin="0,0,0,15" Padding="10">
                    <StackPanel>
                        <TextBlock Text="SharePoint Site URL:" Margin="0,0,0,3" />
                        <TextBox x:Name="SiteUrlTextBox" Margin="0,0,0,10" />

                        <TextBlock Text="Document Library Name:" Margin="0,0,0,3" />
                        <TextBox x:Name="LibraryNameTextBox" Margin="0,0,0,10" />

                        <TextBlock Text="Sync Interval (minutes):" Margin="0,0,0,3" />
                        <TextBox x:Name="SyncIntervalTextBox" Width="100" HorizontalAlignment="Left" Margin="0,0,0,10" />

                        <CheckBox x:Name="AutoSyncCheckBox" Content="Enable Auto-Sync" Margin="0,0,0,10" />

                        <Button Content="Test Connection" Click="TestConnection_Click"
                                Padding="12,4" HorizontalAlignment="Left" />
                    </StackPanel>
                </GroupBox>

                <!-- Security Status -->
                <GroupBox Header="Security Status" Padding="10">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,3">
                            <TextBlock Text="Database Encrypted:" Width="180" />
                            <TextBlock x:Name="DbEncryptedStatus" Text="Checking..." Foreground="Green" FontWeight="Bold" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,3">
                            <TextBlock Text="Secrets Protected:" Width="180" />
                            <TextBlock x:Name="SecretsStatus" Text="Checking..." Foreground="Green" FontWeight="Bold" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,3">
                            <TextBlock Text="Network Firewall:" Width="180" />
                            <TextBlock x:Name="FirewallStatus" Text="Checking..." Foreground="Green" FontWeight="Bold" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,3">
                            <TextBlock Text="Temp Directory:" Width="180" />
                            <TextBlock x:Name="TempDirStatus" Text="Checking..." Foreground="Green" FontWeight="Bold" />
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Cancel" Click="Cancel_Click" Padding="16,6" Margin="0,0,10,0" />
            <Button Content="Save" Click="Save_Click" Padding="16,6" />
        </StackPanel>
    </Grid>
</Window>
